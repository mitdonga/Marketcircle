<h1 class="text-center">Marketcircle</h1>
<div class="container mt-3">
  <div class="row">
    <div class="col-3">
      <h3 class="text-center">Users</h3>
      <%= button_to "Add User", new_user_path, class: "btn btn-primary mb-2", data: { turbo_frame: "user-info" }, method: :get %>
      <ul class="list-group" id="user-list">
        <%= turbo_frame_tag "users_list" do %>
          <% @users.each do |user| %>
            <li class="list-group-item"><%= link_to user.name, user_path(user), class: "user-link text-decoration-none", data: { turbo_frame: "user-info" } %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="col-6 container">
      <h3 class="text-center">User Info</h3>
      <%= turbo_frame_tag "user-info" %>
    </div>
  </div>
</div>
