<%= form_with(model: @user, local: true) do |form| %>
  <div class="mt-4">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <%= form.fields_for :info do |info_form| %>
    <div class="mt-4">
      <%= info_form.label :title, class: "form-label" %>
      <%= info_form.text_field :title, class: "form-control" %>
    </div>
    <div class="mt-4">
      <%= info_form.label :age, class: "form-label" %>
      <%= info_form.number_field :age, class: "form-control" %>
    </div>
    <div class="mt-4">
      <%= info_form.label :phone, class: "form-label" %>
      <%= info_form.text_field :phone, class: "form-control" %>
    </div>
    <div class="mt-4">
      <%= info_form.label :email, class: "form-label" %>
      <%= info_form.email_field :email, class: "form-control" %>
    </div>
  <% end %>
  <div class="actions my-4">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
