<h1>User Details</h1>
<%= turbo_frame_tag "user-info" do %>
  <h4><%= @user.name %><h4>
  <br>
  <% @info = @user.info %>
  <% if @info.present? %>
    <p><strong>Title:</strong> <%= @info.title %></p>
    <p><strong>Age:</strong> <%= @info.age %></p>
    <p><strong>Phone:</strong> <%= @info.phone %></p>
    <p><strong>Email:</strong> <%= @info.email %></p>

    <p class="mt-4">
      <%= link_to "Edit Info", edit_info_path(@info), data: { turbo_frame: "user-info" }, class: "btn btn-primary"  %> 
      <%= link_to "Delete Info", @info, data: { turbo_method: :delete, turbo_confirm: 'Are you sure, do you want to delete this user info?' }, class: "btn btn-danger" %> 
      <%= link_to "Delete User", @user, data: { turbo_method: :delete, turbo_confirm: 'Are you sure, do you want to delete this user?' }, class: "btn btn-danger" %>
    </p>
  <% else %>
    <%= link_to "Add Info", new_info_path(user_id: @user.id), data: { turbo_frame: "user-info" }, class: "btn btn-success" %>
  <% end %>
<% end %>
