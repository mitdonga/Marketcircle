<% if @info.user.present? %>
  <h4><%= @info.user&.name %> Info<h4>
<% end %>

<%= form_with(model: @info, local: true) do |form| %>
  <div class="mt-4">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="mt-4">
    <%= form.label :age, class: "form-label" %>
    <%= form.number_field :age, class: "form-control" %>
  </div>
  <div class="mt-4">
    <%= form.hidden_field :user_id, value: params[:user_id] %>
  </div>
  <div class="mt-4">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>
  <div class="mt-4">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  <div class="actions my-4">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
  <%= link_to "Cancel", user_path(@info.user), data: { turbo_frame: "user-info" }, class: "btn btn-primary" %>
   
<% end %>
